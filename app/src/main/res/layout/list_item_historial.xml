<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemListCardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:strokeWidth="3dp"
        app:strokeColor="@color/black"
        app:cardElevation="4dp"
        android:layout_margin="8dp"
        android:clickable="true"
        app:cardBackgroundColor="?attr/colorSurface"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textTituloHistorial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trabajo CÃ³digo 23h4234"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textServicioHistorial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Servicio"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp" />
                </LinearLayout>

            <ImageView
                android:id="@+id/itemListEstadoHistorial"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_estado"
                app:tint="?attr/colorOnSurface"
                android:layout_gravity="end" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
