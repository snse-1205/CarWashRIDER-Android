<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemListCardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:strokeWidth="3dp"
        app:strokeColor="@color/black"
        app:cardElevation="4dp"
        android:layout_margin="8dp"
        android:clickable="true"
        app:cardBackgroundColor="?attr/colorSurface"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/itemListHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:45"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="4dp"/>

                <ImageView
                    android:id="@+id/itemListIcono"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/itemListTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trabajo Codigo 23h4234"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/itemListMarca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marca"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/itemListColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/itemListPlaca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numero de placa"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Estado alineado a la derecha -->
            <ImageView
                android:id="@+id/itemListEstado"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_estado"
                app:tint="?attr/colorOnSurface"
                android:layout_gravity="end" />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
